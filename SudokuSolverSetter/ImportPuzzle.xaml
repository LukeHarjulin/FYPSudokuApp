<Window x:Class="SudokuSolverSetter.ImportPuzzle"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SudokuSolverSetter"
        mc:Ignorable="d"
        Title="ImportPuzzle" Height="275" Width="350" WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize">
    <Grid>
        <Button x:Name="Import_btn" Content="Import" HorizontalAlignment="Center" Margin="97,0,97,25" VerticalAlignment="Bottom" Width="150" Height="30" FontSize="16" Click="Button_Click"/>
        <TextBlock HorizontalAlignment="Center" Margin="30,10,24,0" VerticalAlignment="Top" FontSize="16" Height="75" Width="290" TextOptions.TextFormattingMode="Display" TextWrapping="Wrap"><Run Text="Enter"/><Run Text=" the sequence of values in the textbox below"/><Run Text=" - empty cells represented as any character but [1-9], e.g. '0','.','*','-'."/></TextBlock>
        <TextBox x:Name="import_txtbx" HorizontalAlignment="Left" Height="80" Margin="30,90,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="290" FontFamily="Consolas"/>

    </Grid>
</Window>
