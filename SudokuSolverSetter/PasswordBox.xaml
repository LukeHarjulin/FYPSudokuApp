<Window x:Class="SudokuSolverSetter.PasswordBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SudokuSolverSetter"
        mc:Ignorable="d"
        Title="PasswordBox" Height="200" Width="400" WindowStartupLocation="CenterOwner" ResizeMode="CanMinimize">
    <Grid FocusManager.FocusedElement="{Binding ElementName=PassBx}">
        <Button x:Name="Enter_btn" Content="Enter" HorizontalAlignment="Center" VerticalAlignment="Center" Width="75" Margin="0,100,0,0" Click="Enter_btn_Click" TabIndex="1" FontSize="16" IsDefault="True"/>
        <PasswordBox x:Name="PassBx" HorizontalAlignment="Center" Height="23" VerticalAlignment="Center" Width="140" TabIndex="0" MaxLength="20"/>
        <Label Content="Enter Developer Password" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,100" FontSize="18"/>

    </Grid>
</Window>
